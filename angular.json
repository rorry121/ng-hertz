{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ng-hertz-doc": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        }
      },
      "root": "projects/ng-hertz-doc",
      "sourceRoot": "projects/ng-hertz-doc/src",
      "prefix": "doc",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "build/ng-hertz-doc",
            "index": "projects/ng-hertz-doc/src/index.html",
            "main": "projects/ng-hertz-doc/src/main.ts",
            "polyfills": "projects/ng-hertz-doc/src/polyfills.ts",
            "tsConfig": "projects/ng-hertz-doc/tsconfig.app.json",
            "aot": false,
            "assets": [
              "projects/ng-hertz-doc/src/favicon.ico",
              "projects/ng-hertz-doc/src/assets",
              "projects/ng-hertz-doc/src/manifest.webmanifest"
            ],
            "styles": ["projects/ng-hertz-doc/src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "projects/ng-hertz-doc/src/environments/environment.ts",
                  "with": "projects/ng-hertz-doc/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ],
              "serviceWorker": true,
              "ngswConfigPath": "projects/ng-hertz-doc/ngsw-config.json"
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "ng-hertz-doc:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "ng-hertz-doc:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "ng-hertz-doc:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ng-hertz-doc/src/test.ts",
            "polyfills": "projects/ng-hertz-doc/src/polyfills.ts",
            "tsConfig": "projects/ng-hertz-doc/tsconfig.spec.json",
            "karmaConfig": "projects/ng-hertz-doc/karma.conf.js",
            "assets": [
              "projects/ng-hertz-doc/src/favicon.ico",
              "projects/ng-hertz-doc/src/assets",
              "projects/ng-hertz-doc/src/manifest.webmanifest"
            ],
            "styles": ["projects/ng-hertz-doc/src/styles.scss"],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/ng-hertz-doc/tsconfig.app.json",
              "projects/ng-hertz-doc/tsconfig.spec.json",
              "projects/ng-hertz-doc/e2e/tsconfig.json"
            ],
            "exclude": ["**/node_modules/**"]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "projects/ng-hertz-doc/e2e/protractor.conf.js",
            "devServerTarget": "ng-hertz-doc:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "ng-hertz-doc:serve:production"
            }
          }
        }
      }
    },
    "ng-hertz-library": {
      "projectType": "library",
      "root": "projects/ng-hertz-library",
      "sourceRoot": "projects/ng-hertz-library/components",
      "prefix": "hz",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/ng-hertz-library/components/tsconfig.lib.json",
            "project": "projects/ng-hertz-library/components/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ng-hertz-library/components/test.ts",
            "tsConfig": "projects/ng-hertz-library/components/tsconfig.spec.json",
            "karmaConfig": "projects/ng-hertz-library/components/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/ng-hertz-library/components/tsconfig.lib.json",
              "projects/ng-hertz-library/components/tsconfig.spec.json"
            ],
            "exclude": ["**/node_modules/**"]
          }
        }
      },
      "schematics": {
        "@schematics/angular:component": {
          "changeDetection": "OnPush",
          "viewEncapsulation": "None",
          "inlineStyle": true,
          "skipImport": true
        },
        "@schematics/angular:directive": {
          "export": true
        }
      }
    },
    "ng-hertz-ui": {
      "projectType": "library",
      "root": "projects/ng-hertz-ui",
      "sourceRoot": "projects/ng-hertz-ui",
      "prefix": "",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/ng-hertz-ui/tsconfig.lib.json",
            "project": "projects/ng-hertz-ui/ng-package.json"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ng-hertz-ui/test.ts",
            "tsConfig": "projects/ng-hertz-ui/tsconfig.spec.json",
            "karmaConfig": "projects/ng-hertz-ui/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": ["projects/ng-hertz-ui/tsconfig.lib.json", "projects/ng-hertz-ui/tsconfig.spec.json"],
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    }
  },
  "defaultProject": "ng-hertz-doc"
}
